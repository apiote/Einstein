<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ml.adamsprogs.einstein.mobile.activities.ChooseGameActivity">

    <TextView
        android:text="Local game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/localGameText"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toTopOf="@+id/onlineGameText"
        android:textSize="40sp"
        android:onClick="change"
        android:layout_marginStart="6dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/onlineGameText"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:text="Team online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onlineGameText"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="239dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="40sp"
        android:textAlignment="center"
        android:onClick="change"/>
</android.support.constraint.ConstraintLayout>
